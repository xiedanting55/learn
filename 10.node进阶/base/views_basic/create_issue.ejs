<%- include("_header") -%>

<h1>Create an issue</h1>

<form action="/create_issue" method="post">
  <div class="form-horizontal">

	<div class="form-group row">
	  <label class="col-form-label col-sm-2" for="Number">Number</label>
	  <div class="col-sm-8">
		<input autofocus class="form-control" name="Number" value="" />
	  </div>
	</div>
	
	<div class="form-group row">
	  <label class="col-form-label col-sm-2" for="Journal">Journal</label>
	  <div class="col-sm-8">
	    <select name="Journal">
		  <% for (const journal of journalmodel) { %>
		    <option value="<%= journal.j_id %>"><%= journal.title %></option>
		  <% } %>
	    </select>
	  </div>
	</div>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Save" class="btn btn-default btn-success" />
        <a class="btn btn-outline-dark cancel" href="/issues">Cancel</a>
      </div>
    </div>
  </div>
</form>

<%- include("_footer") -%>