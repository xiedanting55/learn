<%- include("_header") -%>

<h1>Create an article</h1>

<form action="/create_article" method="post">
  <div class="form-horizontal">

	<div class="form-group row">
	  <label class="col-form-label col-sm-2" for="Title">Title</label>
	  <div class="col-sm-8">
		<input autofocus class="form-control" name="Title" value="" />
	  </div>
	</div>

	<div class="form-group row">
	  <label class="col-form-label col-sm-2" for="Author">First author</label>
	  <div class="col-sm-8">
		<select name="Author">
		  <% for (const author of authormodel) { %>
			<option value="<%= author.au_id %>"><%= author.name %></option>
		  <% } %>
		</select>
	  </div>
	</div>
	
	<div class="form-group row">
	  <label class="col-form-label col-sm-2" for="Issue">Issue</label>
	  <div class="col-sm-8">
	    <select name="Issue">
		  <% for (const issue of issuemodel) { %>
		    <option value="<%= issue.i_id %>"><%= issue.number %> of <%= issue.title %></option>
		  <% } %>
	    </select>
	  </div>
	</div>
	
    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Save" class="btn btn-default btn-success" />
        <a class="btn btn-outline-dark cancel" href="/articles">Cancel</a>
      </div>
    </div>
  </div>
</form>

<%- include("_footer") -%>